<div class="content-container">
  <div class="contents">
    <h1>New Transaction</h1>
    <% if @errors.present? %>
      <div class="errors">
        <ul>
          <% @errors.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p>Please enter the transaction below and press 'Execute Transation'. <br>
    Insert a negative amount for withdrawal (indicated by a minus sign) and a positive amount for a deposit.</p>

    <%= form_for @transaction do |form| %>
      <div class="form-group">
        <%= form.label :amount %>
        <%= form.number_field :amount, step: 0.01, placeholder: "10"  %> <span>USD($)</span>
      </div>
    <br>
      <div class="actions">
        <%= form.submit "Execute Transation", class: 'btn btn-default' %>
      </div>
    <% end %>

    <br>

    <%= link_to "Back to your account", user_path(current_user) %>
  </div>
</div>
